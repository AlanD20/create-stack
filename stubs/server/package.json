{
  "name": "{{appName}}",
  "version": "0.1.0",
  "main": "dist/index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "rimraf dist && tsc && rollup -c rollup.config.js --environment NODE_ENV:local",
    "watch": "yarn dev -w",
    "build": "rimraf dist && tsc && rollup -c rollup.config.js --environment NODE_ENV=production",
    "start": "pm2-dev pm2.json",
    "prod": "pm2-runtime start pm2.json --env production && pm2 save -f",
    "db:gen": "prisma generate",
    "db:push": "prisma db push",
    "format": "prettier --write src",
    "test": "jest",
    "up": "docker-compose -f server.yml up -d",
    "down": "docker-compose -f server.yml down --rmi local -v",
    "docker:install": "docker pull node:16.15.1 && docker pull mysql && docker pull adminer"
  },
  "dependencies": {
    "@prisma/client": "4.7.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "pm2": "^5.2.2",
    "prisma": "^4.7.1",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.6.3",
    "@babel/core": "^7.20.5",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "jest": "^29.3.1",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.4"
  }
}
